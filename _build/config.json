{
  "name": "VerifyLogin",
  "lowCaseName": "verifylogin",
  "description": "Verify login package.",
  "author": "Johan van der Molen",
  "version": "1.0.0",
  "package":{
    "menus": [],
    "elements": {
      "categories": [],
      "snippets": [],
      "chunks": [{
        "name": "verifyLogin",
        "file": "verifylogin.chunk.tpl"
      }],
      "plugins": [{
        "name": "verifyLogin",
        "description": "",
        "file": "verifylogin.plugin.php",
        "events": [
          "OnManagerLogin"
        ]
      }]
    },
    "systemSettings": [{
      "key": "user_name",
      "type": "textfield",
      "area": "default",
      "value": ""
    }, {
      "key": "user_email",
      "type": "textfield",
      "area": "default",
      "value": ""
    }, {
      "key": "email_closure",
      "type": "textfield",
      "area": "default",
      "value": "Sterc Internet & Marketing"
    }, {
      "key": "email_date_format",
      "type": "textfield",
      "area": "default",
      "value": "l d F Y H:i (e)"
    }, {
      "key": "email_powered_by",
      "type": "combo-boolean",
      "area": "default",
      "value": "1"
    }, {
      "key": "email_additional_content",
      "type": "textfield",
      "area": "default",
      "value": "Heb je vragen over de bovenstaande melding? Neem dan contact met ons op via 0512361114 of mail ons op service@sterc.nl."
    }, {
      "key": "email_chunk",
      "type": "textfield",
      "area": "default",
      "value": "verifyLogin"
    }]
  },
  "database": {
    "tables": ["verifyLoginRecord"]
  },
  "build":{
    "resolver": {
      "after": ["setupoptions.resolver.php", "stercextra.resolver.php"]
    },
    "setupOptions":{
      "source": "setup.options.php"
    }
  }
}